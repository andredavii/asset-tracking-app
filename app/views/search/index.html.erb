<h1>Search Devices</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <div>
    <%= form.label :query, "Search for:", :class => "form-label" %>
    <%= form.text_field :query, :value => @query, :class => "form-control" %>
  </div>

  <div>
    <%= form.label :category_id, "Category:", :class => "form-label" %>
    <%= form.select :category_id, Category.all.map { |c| [c.name, c.id] }, :selected => @category_id, :include_blank => true %>
  </div>

  <div>
    <%= form.label :manufacturer_id, "Manufacturer:", :class => "form-label" %>
<%= form.select :manufacturer_id, Manufacturer.all.map { |m| [m.name, m.id] }, :selected => @manufacturer_id, :include_blank => true %>
  </div>

  <div>
    <%= form.submit "Search", :class => "btn btn-outline-primary" %>
  </div>
<% end %>

<% if @query.present? %>
  <h2>Results</h2>

  <% if @devices.present? %>
    <ul>
      <% @devices.each do |d| %>
        <li><%= d.name %></li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <p class="mt-3">Ready to search!</p>
<%end%>

