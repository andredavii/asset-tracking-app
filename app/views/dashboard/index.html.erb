<h1>Dashboard</h1>
<br>
<h2>Device Usage</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th>Assigned</th>
      <th>Available</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      
    <tr>
      <td><%= category.name %></td>
      <td><%= category.devices.count %></td>
      <td><%= category.employees.uniq.count %></td>
    </tr>
  <% end%>
  </tbody>
</table>

          
